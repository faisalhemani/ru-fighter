<div class='container'>
	<div class='row'>
		<div class='col-lg-12 jumbotron' id='panel'>
			<h2 class="page-header">Sign in to RU-Fighter</h2>
			{{#if errors}}
        			<div class="alert alert-danger">
               		 		<p>The following feilds are required</p>
					{{#each errors}}
						{{msg}}<br>
					{{/each}}
       				</div>
        		{{/if}}
			<form method="post" action="/users/login">
				<div class="form-group">
					<label>Username</label>
					<input type="text" class="form-control" placeholder="Username" name="username">
				</div>
				<div class="form-group">
					<label>Password</label>
					<input type="password" class="form-control" placeholder="Password" name="password">
				</div>
				<div class="center">
					<button id="submit_login" type="submit" class="btn btn-sm">Submit</button>
				</div>
			</form>
		</div>
	</div>
</div>
